{
	"format_version": "1.20.30",
	"minecraft:block": {
		"description": {
			"identifier": "mr:planks_birch_cabinet_mr",
			"menu_category": {
                "category": "items",
                "group": "itemGroup.name.mrCabinet",
                "is_hidden_in_commands": false
            },
			"traits": {"minecraft:placement_direction": {"enabled_states": ["minecraft:cardinal_direction"]}},
			"states": {
				"mr:close": [true,false],
				"mr:placed": [false,true]
			}
		},
		"permutations": [
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'north'","components": {"minecraft:transformation": {"rotation": [0,0,0]},"minecraft:on_interact": {"condition": "q.block_face == 3","event": "open"}}},
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'south'","components": {"minecraft:transformation": {"rotation": [0,180,0]},"minecraft:on_interact": {"condition": "q.block_face == 2","event": "open"}}},
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'west'","components": {"minecraft:transformation": {"rotation": [0,90,0]},"minecraft:on_interact": {"condition": "q.block_face == 5","event": "open"}}},
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'east'","components": {"minecraft:transformation": {"rotation": [0,270,0]},"minecraft:on_interact": {"condition": "q.block_face == 4","event": "open"}}},
			{"condition": "!q.block_state('mr:close')","components": {"minecraft:collision_box": {"origin": [-8,0,-8],"size": [16,16,13]},"minecraft:selection_box": {"origin": [-8,0,-8],"size": [16,16,13]}}}
		],
		"components": {
			"minecraft:geometry": {
				"identifier": "geometry.mr.cabinet",
				"bone_visibility": {
					"base": "q.block_state('mr:placed')",
					"close": "q.block_state('mr:close') && q.block_state('mr:placed')",
					"open": "!q.block_state('mr:close') && q.block_state('mr:placed')",
					"item": "!q.block_state('mr:placed')"
				}
			},
			"minecraft:breathability": "air",
			"minecraft:material_instances": {"*": {"texture": "mr.planks_birch","render_method": "opaque"},"wood": {"texture": "mr.wood_birch","render_method": "opaque"}},
			"minecraft:collision_box": true,
			"minecraft:selection_box": true,
			"minecraft:on_placed": {"event": "block_placed"},
			"minecraft:on_player_placing": {"event": "block_placed"},
			"minecraft:light_dampening": 1,
			"minecraft:flammable": {"catch_chance_modifier":5,"destroy_chance_modifier":5},
			"minecraft:destructible_by_explosion": {"explosion_resistance": 3.0},
			"minecraft:destructible_by_mining": {"seconds_to_destroy": 0.8},
			"minecraft:map_color": "#f7781e"
		},
		"events": {
			"open": {
				"sequence": [
					{"condition": "q.block_state('mr:close')","run_command": {"command": ["playsound mr.cabinet_open @a ~~~"]}},
					{"condition": "!q.block_state('mr:close')","run_command": {"command": ["playsound mr.cabinet_close @a ~~~"]}},
					{"set_block_state": {"mr:close": "!q.block_state('mr:close')"}}
				]
			},
			"block_placed": {
				"run_command": {"command": ["execute unless entity @e[type=mr:container_mr,r=0.5] run summon mr:container_mr ~~~ ~~ mr:inventory_18 cabinet"]},
				"set_block_state": {"mr:placed": true}
			}
		}
	}
}