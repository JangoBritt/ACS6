{
    "format_version": "1.20.0",
    "minecraft:block": {
        "description": {
            "identifier": "farmersdelight:rich_soil",
            "menu_category": {
                "category": "nature"
            }
        },
        "components": {
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0.6
            },
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 3
            },
            "minecraft:geometry": "geometry.block",
            "minecraft:material_instances": {
                "*": {
                    "texture": "rich_soil"
                }
            },
            "minecraft:on_interact": {
                "condition": "(query.block_face == 1.0&&(query.is_item_name_any('slot.weapon.mainhand','minecraft:sugar_cane','minecraft:brown_mushroom','minecraft:red_mushroom')))||query.equipped_item_any_tag('slot.weapon.mainhand','minecraft:is_hoe')",
                "event": "farmersdelight:on_interact",
                "target": "self"
            },
            "tag:dirt": {},
            "tag:sand": {},
            "tag:compost_activators": {}
        },
        "events": {
            "place_sugar_cane": {
                "sequence": [
                    {
                        "run_command": {
                            "command": [
                                "execute if block ~ ~+1 ~ air run setblock ~ ~+1 ~ farmersdelight:rich_soil_sugar_cane_bottom",
                                "playsound dig.grass @a ~~~"
                            ]
                        }
                    },
                    {
                        "decrement_stack": {}
                    }
                ]
            },
            "place_brown_mushroom": {
                "sequence": [
                    {
                        "run_command": {
                            "command": [
                                "execute if block ~ ~+1 ~ air run setblock ~ ~+1 ~ farmersdelight:brown_mushroom_colony",
                                "playsound dig.grass @a ~~~"
                            ]
                        }
                    },
                    {
                        "decrement_stack": {}
                    }
                ]
            },
            "place_red_mushroom": {
                "sequence": [
                    {
                        "run_command": {
                            "command": [
                                "execute if block ~ ~+1 ~ air run setblock ~ ~+1 ~ farmersdelight:red_mushroom_colony",
                                "playsound dig.grass @a ~~~"
                            ]
                        }
                    },
                    {
                        "decrement_stack": {}
                    }
                ]
            },
            "farmland_transformation": {
                "sequence": [
                    {
                        "run_command": {
                            "command": [
                                "setblock ~~~ farmersdelight:rich_soil_farmland",
                                "playsound use.gravel @a ~~~"
                            ]
                        }
                    },
                    {
                        "damage": {
                            "amount": 1,
                            "target": "item",
                            "type": "magic"
                        }
                    }
                ]
            },
            "farmersdelight:on_interact": {
                "sequence": [
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand','minecraft:sugar_cane')",
                        "trigger": {
                            "event": "place_sugar_cane"
                        }
                    },
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand','minecraft:brown_mushroom')",
                        "trigger": {
                            "event": "place_brown_mushroom"
                        }
                    },
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand','minecraft:red_mushroom')",
                        "trigger": {
                            "event": "place_red_mushroom"
                        }
                    },
                    {
                        "condition": "query.equipped_item_any_tag('slot.weapon.mainhand','minecraft:is_hoe')",
                        "trigger": {
                            "event": "farmland_transformation"
                        }
                    }
                ]
            }
        }
    }
}