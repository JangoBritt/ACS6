{
    "format_version": "1.20.0",
    "minecraft:block": {
        "description": {
            "identifier": "farmersdelight:rich_soil_farmland",
            "menu_category": {
                "category": "nature"
            },
            "properties": {
                "farmersdelight:moisturized_amount": [
                    0,1,2,3,4,5,6,7
                ]
            }
        },
        "permutations": [
            {
                "condition": "query.block_state('farmersdelight:moisturized_amount') > 0",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "rich_soil_farmland_moist_side"
                        },
                        "top": {
                            "texture": "rich_soil_farmland_moist"
                        },
                        "bottom": {
                            "texture": "rich_soil"
                        }
                    }
                }
            },
            {
                "condition": "query.block_state('farmersdelight:moisturized_amount') == 0",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "rich_soil"
                        },
                        "top": {
                            "texture": "rich_soil_farmland"
                        }
                    }
                }
            }
        ],
        "components": {
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 0.6
            },
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 3
            },
            "minecraft:geometry": "geometry.rich_soil_farmland",
            "minecraft:on_interact": {
                "condition": "query.block_face == 1.0&&(query.is_item_name_any('slot.weapon.mainhand','minecraft:wheat_seeds','minecraft:beetroot_seeds','minecraft:carrot','minecraft:potato','minecraft:torchflower_seeds','minecraft:torchflower','minecraft:melon_seeds','minecraft:pumpkin_seeds'))",
                "event": "farmersdelight:on_interact",
                "target": "self"
            },
            "minecraft:collision_box": {
                "origin": [
                    -8.0,
                    0.0,
                    -8.0
                ],
                "size": [
                    16.0,
                    15.0,
                    16.0
                ]
            },
            "minecraft:selection_box": {
                "origin": [
                    -8.0,
                    0.0,
                    -8.0
                ],
                "size": [
                    16.0,
                    15.0,
                    16.0
                ]
            },
            "minecraft:random_ticking": {
                "on_tick": {
                    "event": "farmersdelight:random_ticking",
                    "target": "self"
                }
            },
            "minecraft:loot": "loot_tables/farmersdelight/rich_soil_farmland.json",
            "tag:dirt": {},
            "tag:farmland": {}
        },
        "events": {
            "place_wheat": {
                "sequence": [
                    {
                        "run_command": {
                            "command": [
                                "execute if block ~ ~+1 ~ air run setblock ~ ~+1 ~ farmersdelight:rich_soil_wheat",
                                "playsound dig.grass @a ~~~"
                            ]
                        }
                    },
                    {
                        "decrement_stack": {}
                    }
                ]
            },
            "place_beetroot": {
                "sequence": [
                    {
                        "run_command": {
                            "command": [
                                "execute if block ~ ~+1 ~ air run setblock ~ ~+1 ~ farmersdelight:rich_soil_beetroot",
                                "playsound dig.grass @a ~~~"
                            ]
                        }
                    },
                    {
                        "decrement_stack": {}
                    }
                ]
            },
            "place_carrot": {
                "sequence": [
                    {
                        "run_command": {
                            "command": [
                                "execute if block ~ ~+1 ~ air run setblock ~ ~+1 ~ farmersdelight:rich_soil_carrot",
                                "playsound dig.grass @a ~~~"
                            ]
                        }
                    },
                    {
                        "decrement_stack": {}
                    }
                ]
            },
            "place_potato": {
                "sequence": [
                    {
                        "run_command": {
                            "command": [
                                "execute if block ~ ~+1 ~ air run setblock ~ ~+1 ~ farmersdelight:rich_soil_potato",
                                "playsound dig.grass @a ~~~"
                            ]
                        }
                    },
                    {
                        "decrement_stack": {}
                    }
                ]
            },
            "place_torchflower_crop": {
                "sequence": [
                    {
                        "run_command": {
                            "command": [
                                "execute if block ~ ~+1 ~ air run setblock ~ ~+1 ~ farmersdelight:rich_soil_torchflower_crop",
                                "playsound dig.grass @a ~~~"
                            ]
                        }
                    },
                    {
                        "decrement_stack": {}
                    }
                ]
            },
            "place_torchflower": {
                "sequence": [
                    {
                        "run_command": {
                            "command": [
                                "execute if block ~ ~+1 ~ air run setblock ~ ~+1 ~ farmersdelight:rich_soil_torchflower",
                                "playsound dig.grass @a ~~~"
                            ]
                        }
                    },
                    {
                        "decrement_stack": {}
                    }
                ]
            },
            "farmersdelight:on_interact": {
                "sequence": [
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand','minecraft:wheat_seeds')",
                        "trigger": {
                            "event": "place_wheat"
                        }
                    },
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand','minecraft:potato')",
                        "trigger": {
                            "event": "place_potato"
                        }
                    },
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand','minecraft:carrot')",
                        "trigger": {
                            "event": "place_carrot"
                        }
                    },
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand','minecraft:beetroot_seeds')",
                        "trigger": {
                            "event": "place_beetroot"
                        }
                    },
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand','minecraft:torchflower_seeds')",
                        "trigger": {
                            "event": "place_torchflower_crop"
                        }
                    },
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand','minecraft:torchflower')",
                        "trigger": {
                            "event": "place_torchflower"
                        }
                    }
                ]
            },
            "farmersdelight:random_ticking": {
                "sequence": [
                    {
                        "run_command": {
                            "command": [
                                "scriptevent farmersdelight:rich_soil_farmland_tick"
                            ]
                        }
                    }
                ]
            }
        }
    }
}