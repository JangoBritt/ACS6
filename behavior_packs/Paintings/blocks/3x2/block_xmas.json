{
	"format_version": "1.18.0",
	"minecraft:block": {
		"description": {
			"identifier": "athos_painting:block_xmas",
			"properties": {
				"athos_painting:block_rotation": [
					2,
					3,
					4,
					5
				]
			}
		},
		"components": {
			"minecraft:creative_category": {
				"parent": "itemGroup.name.paintings"
			},
			"minecraft:geometry": "geometry.marco",
			"minecraft:block_light_filter": 0,
			"minecraft:material_instances": {
				"*": {
					"texture": "s_marco",
					"render_method": "alpha_test"
				}
			},
			"minecraft:ticking": {
				"on_tick": {
					"event": "air"
				},
				"range": [
					0,
					0.1
				]
			},
			"minecraft:on_placed": {
				"event": "cuadro"
			},
			"minecraft:on_player_placing": {
				"event": "athos_painting:update_rotation"
			}
		},
		"events": {
			"air": {
				"run_command": {
					"command": [
						"setblock ~ ~ ~ air"
					]
				}
			},
			"athos_painting:update_rotation": {
				"sequence": [
					{
						"set_block_property": {
							"athos_painting:block_rotation": "query.cardinal_facing_2d"
						}
					}
				]
			},
			"cuadro": {
				"randomize": [
					{
						"sequence": [
							{
								"condition": "query.block_property('athos_painting:block_rotation')==2",
								"run_command": {
									"command": [
										"summon athos_painting:painting_xmas ~ ~-0.5 ~ facing_north"
									]
								}
							},
							{
								"condition": "query.block_property('athos_painting:block_rotation')==3",
								"run_command": {
									"command": [
										"summon athos_painting:painting_xmas ~ ~-0.5 ~ facing_south"
									]
								}
							},
							{
								"condition": "query.block_property('athos_painting:block_rotation')==4",
								"run_command": {
									"command": [
										"summon athos_painting:painting_xmas ~ ~-0.5 ~ facing_west"
									]
								}
							},
							{
								"condition": "query.block_property('athos_painting:block_rotation')==5",
								"run_command": {
									"command": [
										"summon athos_painting:painting_xmas ~ ~-0.5 ~ facing_east"
									]
								}
							}
						]
					}
				]
			}
		}
	}
}