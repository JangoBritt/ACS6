{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "medieval:saddle_stand_top_2",
			"properties": {
				"medieval:facing_direction": [0,1,2,3]
			}
		},
		"permutations": [
			{"condition": "query.block_property('medieval:facing_direction') == 0","components": {"minecraft:rotation": [0,0,0]}},
			{"condition": "query.block_property('medieval:facing_direction') == 1","components": {"minecraft:rotation": [0,180,0]}},
			{"condition": "query.block_property('medieval:facing_direction') == 2","components": {"minecraft:rotation": [0,90,0]}},
			{"condition": "query.block_property('medieval:facing_direction') == 3","components": {"minecraft:rotation": [0,-90,0]}}
		],
		"components": {
			"minecraft:geometry": "geometry.m.no_stairs",
			"minecraft:material_instances": {"*": {"texture": "m.empty","render_method": "alpha_test"}},"minecraft:map_color": "#f0b030",
			"tag:stand_top": {},
			"tag:state2": {},
			"tag:medieval_furniture": {},
			"minecraft:creative_category": {"category": "commands","group": "itemGroup.name.unobtainableBlocks"},
			"minecraft:on_placed":{"event": "rotation"},
			"minecraft:loot": "empty",
			"minecraft:on_interact": {"event": "add","target": "self"},
			"minecraft:placement_filter": {"conditions": [{"allowed_faces": ["up"],"block_filter": [{"tags": "q.any_tag('m.triple_saddle_stand')"}]}]},
			"minecraft:entity_collision": {"origin": [-4.5,0.0,-8.0],"size": [9,15.5,16]},
			"minecraft:pick_collision": {"origin": [-4.5,0.0,-8.0],"size": [9,15.5,16]},
			"minecraft:block_light_absorption": 0.0,
			"minecraft:explosion_resistance": 3.0,
			"minecraft:destroy_time": 0.8
		},
		"events": {
			"rotation":{
				"sequence":[
					{"condition": "q.block_neighbor_has_any_tag(0,-1,0,'south_stand')","set_block_property": {"medieval:facing_direction": 1}},
					{"condition": "q.block_neighbor_has_any_tag(0,-1,0,'east_stand')","set_block_property": {"medieval:facing_direction": 2}},
					{"condition": "q.block_neighbor_has_any_tag(0,-1,0,'west_stand')","set_block_property": {"medieval:facing_direction": 3}}
				]
			},
			"add":{
				"sequence":[
					{"condition": "query.get_equipped_item_name('main_hand') == 'saddle'","decrement_stack": {},"run_command": {"command": ["playsound block.itemframe.add_item @a ~ ~ ~","setblock ~ ~ ~ medieval:saddle_stand_top_3"]}},
					{"condition": "query.get_equipped_item_name('main_hand') != 'saddle'","spawn_loot": {"table": "loot_tables/drops/saddle.json"},"run_command": {"command": ["playsound block.itemframe.remove_item @a ~ ~ ~","setblock ~ ~ ~ medieval:saddle_stand_top_1"]}}
				]
			}
		}
	}
}