{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "medieval:spruce_triple_saddle_stand",
			"properties": {
				"medieval:facing_direction": [2,3,4,5],
				"medieval:state": [0,1,2,3]
			}
		},
		"permutations": [
			{"condition": "q.block_property('medieval:facing_direction') == 2","components": {"minecraft:rotation": [0,0,0]}},
			{"condition": "q.block_property('medieval:facing_direction') == 3","components": {"minecraft:rotation": [0,180,0],"tag:south_stand": {}}},
			{"condition": "q.block_property('medieval:facing_direction') == 4","components": {"minecraft:rotation": [0,90,0],"tag:east_stand": {}}},
			{"condition": "q.block_property('medieval:facing_direction') == 5","components": {"minecraft:rotation": [0,-90,0],"tag:west_stand": {}}},
			{"condition": "q.block_property('medieval:state') == 1","components": {"minecraft:geometry": "geometry.saddle_triple_1","minecraft:loot": "loot_tables/saddle_stand/spruce_triple_saddle_stand1.json"}},
			{"condition": "q.block_property('medieval:state') == 2","components": {"minecraft:geometry": "geometry.saddle_triple_2","minecraft:loot": "loot_tables/saddle_stand/spruce_triple_saddle_stand2.json"}},
			{"condition": "q.block_property('medieval:state') == 3","components": {"minecraft:geometry": "geometry.saddle_triple_3","minecraft:on_interact": {"event": "remove","target": "self"},"minecraft:loot": "loot_tables/saddle_stand/spruce_triple_saddle_stand3.json"}}
		],
		"components": {
			"minecraft:geometry": "geometry.saddle_triple_0",
			"minecraft:material_instances": {"wsaddle": {"texture": "saddle_horse","render_method": "opaque"},"*": {"texture": "stripped_spruce","render_method": "opaque"}},
			"minecraft:on_player_placing": {"event": "set_facing_direction"},
			"minecraft:on_interact": {"event": "add"},
			"tag:m.triple_saddle_stand": {},
			"tag:medieval_furniture": {},
			"minecraft:on_placed":{"event": "place_top"},
			"minecraft:ticking": {"on_tick":{"event": "update"},"range": [0.1,0.1],"looping": true},
			"minecraft:placement_filter": {"conditions": [{"allowed_faces":["up"]}]},
			"minecraft:breathability": "air",
			"minecraft:entity_collision": {"origin": [-4.5,0.0,-8.0],"size": [9,16,16]},
			"minecraft:pick_collision": {"origin": [-4.5,0.0,-8.0],"size": [9,16,16]},
			"minecraft:creative_category": {"category": "items","group": "itemGroup.name.spruce"},
			"minecraft:block_light_absorption": 0.0,
			"minecraft:explosion_resistance": 3.0,
			"minecraft:destroy_time": 0.8,
			"minecraft:map_color": "#9e6a1b"
		},
		"events": {
			"set_facing_direction": {"set_block_property": {"medieval:facing_direction": "q.cardinal_facing_2d"}},
			"place_top": {"sequence": [{"condition": "!(q.block_neighbor_has_any_tag(0,1,0,'stand_top'))","run_command": {"command": "setblock ~ ~1 ~ medieval:saddle_stand_top_0 keep"}}]},
			"update":{
				"sequence": [
					{"condition": "!(q.block_neighbor_has_any_tag(0,1,0,'stand_top'))","run_command": {"command": "setblock ~ ~ ~ air destroy"}},
					{"condition": "q.block_property('medieval:state') == 1 && q.block_property('medieval:facing_direction') != 1 && q.block_neighbor_has_any_tag(0,1,0,'state0')","set_block_property": {"medieval:state": 0}},
					{"condition": "(q.block_property('medieval:state') == 0 || q.block_property('medieval:state') == 2) && q.block_neighbor_has_any_tag(0,1,0,'state1')","set_block_property": {"medieval:state": 1}},
					{"condition": "(q.block_property('medieval:state') == 1 || q.block_property('medieval:state') == 3) && q.block_neighbor_has_any_tag(0,1,0,'state2')","set_block_property": {"medieval:state": 2}},
					{"condition": "q.block_property('medieval:state') == 2 && q.block_neighbor_has_any_tag(0,1,0,'state3')","set_block_property": {"medieval:state": 3}}
				]
			},
			"add": {
				"sequence": [
					{"condition": "q.block_property('medieval:state') == 0 && q.get_equipped_item_name('main_hand') == 'saddle'","set_block_property": {"medieval:state": 1},"decrement_stack": {},"run_command": {"command": ["playsound block.itemframe.add_item @a ~ ~ ~","setblock ~ ~1 ~ medieval:saddle_stand_top_1"]}},
					{"condition": "q.block_property('medieval:state') == 1 && q.get_equipped_item_name('main_hand') == 'saddle'","set_block_property": {"medieval:state": 2},"decrement_stack": {},"run_command": {"command": ["playsound block.itemframe.add_item @a ~ ~ ~","setblock ~ ~1 ~ medieval:saddle_stand_top_2"]}},
					{"condition": "q.block_property('medieval:state') == 2 && q.get_equipped_item_name('main_hand') == 'saddle'","set_block_property": {"medieval:state": 3},"decrement_stack": {},"run_command": {"command": ["playsound block.itemframe.add_item @a ~ ~ ~","setblock ~ ~1 ~ medieval:saddle_stand_top_3"]}},
					{"condition": "q.block_property('medieval:state') == 2 && q.get_equipped_item_name('main_hand') != 'saddle'","set_block_property": {"medieval:state": 1},"spawn_loot": {"table": "loot_tables/drops/saddle.json"},"run_command": {"command": ["playsound block.itemframe.remove_item @a ~ ~ ~","setblock ~ ~1 ~ medieval:saddle_stand_top_1"]}},
					{"condition": "q.block_property('medieval:state') == 1 && q.get_equipped_item_name('main_hand') != 'saddle'","set_block_property": {"medieval:state": 0},"spawn_loot": {"table": "loot_tables/drops/saddle.json"},"run_command": {"command": ["playsound block.itemframe.remove_item @a ~ ~ ~","setblock ~ ~1 ~ medieval:saddle_stand_top_0"]}}
				]
			},
			"remove": {"run_command": {"command": ["playsound block.itemframe.remove_item @a ~ ~ ~","setblock ~ ~1 ~ medieval:saddle_stand_top_2"]},"spawn_loot": {"table": "loot_tables/drops/saddle.json"},"set_block_property": {"medieval:state": 2}}
		}
	}
}