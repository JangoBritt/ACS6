			"minecraft:entity_collision": {"origin": [-8.0,0.0,-8.0],"size": [16,16,16]},
			"minecraft:pick_collision": {"origin": [-8.0,0.0,-8.0],"size": [16,16,16]},
			"minecraft:block_light_absorption": 0.0,
			"minecraft:explosion_resistance": 6.0,
			"minecraft:destroy_time": 1,
			"minecraft:map_color": "#9C9C9C"
		},
		"events": {
			"update": {
				"sequence": [
					{"condition": "!q.block_neighbor_has_any_tag(0,1,0,'pillar') && !q.block_neighbor_has_any_tag(0,-1,0,'pillar')","set_block_property": {"endx:state": 0}},
					{"condition": "q.block_neighbor_has_any_tag(0,1,0,'pillar') && !q.block_neighbor_has_any_tag(0,-1,0,'pillar')","set_block_property": {"endx:state": 1}},
					{"condition": "q.block_neighbor_has_any_tag(0,-1,0,'pillar') && !q.block_neighbor_has_any_tag(0,1,0,'pillar')","set_block_property": {"endx:state": 2}},
					{"condition": "q.block_neighbor_has_any_tag(0,1,0,'pillar') && q.block_neighbor_has_any_tag(0,-1,0,'pillar')","set_block_property": {"endx:state": 3}}
				]
			}
