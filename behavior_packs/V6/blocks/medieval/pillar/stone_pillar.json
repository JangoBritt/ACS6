			{"condition": "query.block_property('endx:state') == 2","components": {"minecraft:geometry": "geometry.pillar_2"}},
			{"condition": "query.block_property('endx:state') == 3","components": {"minecraft:geometry": "geometry.pillar_3"}}
		],
		"components": {
			"tag:medieval_furniture": {},
			"minecraft:geometry": "geometry.pillar_0",
			"minecraft:material_instances": {"*": {"texture": "m.stone","render_method": "opaque"}},
			"minecraft:ticking": {"on_tick":{"event": "update"},"range": [0,0],"looping": true},
			"minecraft:creative_category": {"category": "construction","group": "itemGroup.name.pillar"},
