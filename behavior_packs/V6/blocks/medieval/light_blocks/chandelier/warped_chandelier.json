{
	"format_version": "1.20.30",
	"minecraft:block": {
		"description": {
			"identifier": "medieval:warped_chandelier",
			"menu_category": {
				"category": "items",
				"group": "itemGroup.name.warped"
			},
			"states": {
				"medieval:lantern": [0,1,2]
			}
		},
		"permutations": [
			{"condition": "q.block_state('medieval:lantern') == 2","components": {"minecraft:material_instances": {"*": {"texture": "m.stripped_warped","render_method": "alpha_test","ambient_occlusion": false},"chain_1": {"texture": "m.chain_1","render_method": "alpha_test","ambient_occlusion": false},"chain_2": {"texture": "m.chain_2","render_method": "alpha_test","ambient_occlusion": false},"metal": {"texture": "m.metal_0","render_method": "alpha_test","ambient_occlusion": false},"lantern": {"texture": "m.soul_lantern","render_method": "alpha_test","ambient_occlusion": false,"face_dimming": false}}}},
			{"condition": "q.block_state('medieval:lantern') >= 1","components": {"minecraft:light_emission": 15}}
		],
		"components": {
			"tag:medieval_furniture": {},
			"minecraft:geometry": {
				"identifier": "geometry.m.wooden_chandelier",
				"bone_visibility": {
					"lantern": "q.block_state('medieval:lantern') >= 1"
				}
			},
			"minecraft:on_interact": {"event": "add_lantern"},
			"minecraft:material_instances": {"*": {"texture": "m.stripped_warped","render_method": "alpha_test","ambient_occlusion": false},"chain_1": {"texture": "m.chain_1","render_method": "alpha_test","ambient_occlusion": false},"chain_2": {"texture": "m.chain_2","render_method": "alpha_test","ambient_occlusion": false},"metal": {"texture": "m.metal_0","render_method": "alpha_test","ambient_occlusion": false},"lantern": {"texture": "m.lantern","render_method": "alpha_test","ambient_occlusion": false,"face_dimming": false}},
			"minecraft:collision_box": {"origin": [-8,0.0,-8],"size": [16,16,16]},
			"minecraft:selection_box": {"origin": [-8,0.0,-8],"size": [16,16,16]},
			"minecraft:light_dampening": 0,
			"minecraft:destructible_by_explosion": {"explosion_resistance": 3.0},
			"minecraft:destructible_by_mining": {"seconds_to_destroy": 0.8},
			"minecraft:map_color": "#47DCDE"
		},
		"events": {
			"add_lantern": {
				"sequence": [
					{"condition": "q.block_state('medieval:lantern') == 0 && q.is_item_name_any('slot.weapon.mainhand', 0,'minecraft:lantern')","set_block_state": {"medieval:lantern": 1},"run_command": {"command": "playsound block.itemframe.add_item @a ~ ~ ~"}},
					{"condition": "q.block_state('medieval:lantern') == 0 && q.is_item_name_any('slot.weapon.mainhand', 0,'minecraft:soul_lantern')","set_block_state": {"medieval:lantern": 2},"run_command": {"command": "playsound block.itemframe.add_item @a ~ ~ ~"}},
					{"condition": "q.block_state('medieval:lantern') >= 1 && q.is_sneaking","set_block_state": {"medieval:lantern": 0},"run_command": {"command": "playsound block.itemframe.remove_item @a ~ ~ ~"}}
				]
			}
		}
	}
}