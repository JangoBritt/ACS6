{
	"format_version": "1.20.30",
	"minecraft:block": {
		"description": {
			"identifier": "medieval:iron_throne_bot",
            "menu_category": {
                "category": "items",
                "group": "itemGroup.name.thrones",
                "is_hidden_in_commands": false
            },
			"traits": {
				"minecraft:placement_direction": {"enabled_states": ["minecraft:cardinal_direction"]}
			}
		},
		"permutations": [
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'north'","components": {"minecraft:transformation": { "rotation": [0,0,0]}}},
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'south'","components": {"minecraft:transformation": { "rotation": [0,180,0]}}},
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'west'","components": {"minecraft:transformation": { "rotation": [0,90,0]}}},
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'east'","components": {"minecraft:transformation": { "rotation": [0,270,0]}}}
		],
		"components": {
			"tag:medieval_furniture": {},
			"tag:m.iron_throne": {},
			"minecraft:geometry": "geometry.m.iron_throne_bot",
			"minecraft:on_placed": {"event": "set_block"},
			"minecraft:on_interact": {"event": "sit"},
			"minecraft:queued_ticking": {"on_tick":{"event": "update"},"interval_range": [2,2],"looping": true},
			"minecraft:material_instances": {"*": {"texture": "m.iron_throne","render_method": "alpha_test"}},
			"minecraft:collision_box": {"origin": [-8,0.0,-8],"size": [16,9,16]},
			"minecraft:selection_box": {"origin": [-8,0.0,-8],"size": [16,9,16]},
			"minecraft:light_dampening": 0.0,
			"minecraft:destructible_by_explosion": {"explosion_resistance": 10.0},
			"minecraft:destructible_by_mining": {"seconds_to_destroy": 2.0},
			"minecraft:map_color": "#24abab"
		},
		"events": {
			"update": {
				"sequence": [
					{"condition": "!q.block_neighbor_has_any_tag(0,1,0,'m.iron_throne_top')","run_command": {"command": ["setblock ~~~ air destroy"]}}
				]
			},
			"set_block": {
				"sequence": [
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'north'", "run_command": {"command":"setblock ~~1~ medieval:iron_throne_top[\"minecraft:cardinal_direction\" = \"north\"] keep"}},
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'south'", "run_command": {"command":"setblock ~~1~ medieval:iron_throne_top[\"minecraft:cardinal_direction\" = \"south\"] keep"}},
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'east'", "run_command": {"command":"setblock ~~1~ medieval:iron_throne_top[\"minecraft:cardinal_direction\" = \"east\"] keep"}},
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'west'", "run_command": {"command":"setblock ~~1~ medieval:iron_throne_top[\"minecraft:cardinal_direction\" = \"west\"] keep"}}
				]
			},
			"sit": {
				"sequence": [
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'north'","run_command": {"command": ["execute unless entity @e[type=medieval:sit_bench,r=0.5] run summon medieval:sit_bench ~ ~ ~0.1 facing ~ ~ ~1","execute as @e[type=medieval:sit_bench,c=1,r=0.5] at @s run ride @a[r=5,c=1,tag=!is_riding] start_riding @s teleport_rider"]}},
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'south'","run_command": {"command": ["execute unless entity @e[type=medieval:sit_bench,r=0.5] run summon medieval:sit_bench ~ ~ ~-0.1 facing ~ ~ ~-1","execute as @e[type=medieval:sit_bench,c=1,r=0.5] at @s run ride @a[r=5,c=1,tag=!is_riding] start_riding @s teleport_rider"]}},
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'west'","run_command": {"command": ["execute unless entity @e[type=medieval:sit_bench,r=0.5] run summon medieval:sit_bench ~0.1 ~ ~ facing ~1 ~ ~","execute as @e[type=medieval:sit_bench,c=1,r=0.5] at @s run ride @a[r=5,c=1,tag=!is_riding] start_riding @s teleport_rider"]}},
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'east'","run_command": {"command": ["execute unless entity @e[type=medieval:sit_bench,r=0.5] run summon medieval:sit_bench ~-0.1 ~ ~ facing ~-1 ~ ~","execute as @e[type=medieval:sit_bench,c=1,r=0.5] at @s run ride @a[r=5,c=1,tag=!is_riding] start_riding @s teleport_rider"]}}
				]
			}
		}
	}
}