{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "medieval:workbench_left",
			"properties": {
				"medieval:facing_direction": [0,1,2,3,4,5],
				"medieval:placed": [false,true]
			}
		},
		"permutations": [
			{"condition": "q.block_property('medieval:facing_direction') == 0","components": {"minecraft:geometry": "geometry.m.workbench_item"}},
			{"condition": "q.block_property('medieval:facing_direction') == 1","components": {"minecraft:placement_filter": {"conditions": [{"block_filter": ["empty"]}]}}},
			{"condition": "q.block_property('medieval:facing_direction') == 2","components": {"minecraft:rotation": [0,0,0],"tag:workbench_north": {}}},
			{"condition": "q.block_property('medieval:facing_direction') == 3","components": {"minecraft:rotation": [0,180,0],"tag:workbench_south": {}}},
			{"condition": "q.block_property('medieval:facing_direction') == 4","components": {"minecraft:rotation": [0,90,0],"tag:workbench_east": {}}},
			{"condition": "q.block_property('medieval:facing_direction') == 5","components": {"minecraft:rotation": [0,-90,0],"tag:workbench_west": {}}}
		],
		"components": {
			"minecraft:geometry": "geometry.m.workbench_left",
			"tag:workbench_left": {},
			"tag:medieval_furniture": {},
			"minecraft:material_instances": {"wood": {"texture": "stripped_spruce","render_method": "opaque"},"*": {"texture": "oak_planks","render_method": "opaque"},"zline": {"texture": "light_gray_concrete","render_method": "opaque"}},
			"minecraft:creative_category": {"category": "equipment","group": "itemGroup.name.workbench"},
			"minecraft:crafting_table": {"grid_size": 3,"crafting_tags": ["workbench"]},
			"minecraft:on_player_placing": {"event": "set_facing_direction"},
			"minecraft:on_placed": {"condition": "q.block_property('medieval:placed') == false","event": "place_block","target": "self"},
			"minecraft:ticking": {"on_tick":{"event": "update"},"range": [0.1,0.1],"looping": true},
			"minecraft:entity_collision": {"origin": [-8.0,0.0,-8.0],"size": [16,16,16]},
			"minecraft:pick_collision": {"origin": [-8.0,0.0,-8.0],"size": [16,16,16]},
			"minecraft:block_light_absorption": 0,
			"minecraft:explosion_resistance": 3.0,
			"minecraft:destroy_time": 0.8,
			"minecraft:map_color": "#ED8116"
		},
		"events": {
			"set_facing_direction": {"set_block_property": {"medieval:facing_direction": "q.cardinal_facing_2d"}},
			"update": {"sequence": [{"condition": "q.block_property('medieval:facing_direction') == 2 && !q.block_neighbor_has_any_tag(1,0,0,'work_north')","set_block_property": {"medieval:facing_direction": 1}},{"condition": "q.block_property('medieval:facing_direction') == 3 && !q.block_neighbor_has_any_tag(-1,0,0,'work_south')","set_block_property": {"medieval:facing_direction": 1}},{"condition": "q.block_property('medieval:facing_direction') == 4 && !q.block_neighbor_has_any_tag(0,0,-1,'work_east')","set_block_property": {"medieval:facing_direction": 1}},{"condition": "q.block_property('medieval:facing_direction') == 5 && !q.block_neighbor_has_any_tag(0,0,1,'work_west')","set_block_property": {"medieval:facing_direction": 1}}]},
			"place_block": {"sequence": [{"condition": "q.block_property('medieval:placed') == false","set_block_property": {"medieval:placed": true}},{"condition": "q.block_property('medieval:facing_direction') == 2","run_command": {"command": ["setblock ~1 ~ ~ medieval:workbench_right keep"]}},{"condition": "q.block_property('medieval:facing_direction') == 3","run_command": {"command": ["setblock ~-1 ~ ~ medieval:workbench_right keep"]}},{"condition": "q.block_property('medieval:facing_direction') == 4","run_command": {"command": ["setblock ~ ~ ~-1 medieval:workbench_right keep"]}},{"condition": "q.block_property('medieval:facing_direction') == 5","run_command": {"command": ["setblock ~ ~ ~1 medieval:workbench_right keep"]}}]}
		}
	}
}