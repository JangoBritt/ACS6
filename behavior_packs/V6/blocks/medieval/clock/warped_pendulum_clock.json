{
	"format_version": "1.20.30",
	"minecraft:block": {
		"description": {
			"identifier": "medieval:warped_pendulum_clock",
			"traits": {
				"minecraft:placement_direction": {"enabled_states": ["minecraft:cardinal_direction"]}
			}
		},
		"permutations": [
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'north'","components": {"minecraft:transformation": { "rotation": [0,0,0]}}},
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'south'","components": {"minecraft:transformation": { "rotation": [0,180,0]}}},
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'west'","components": {"minecraft:transformation": { "rotation": [0,90,0]}}},
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'east'","components": {"minecraft:transformation": { "rotation": [0,270,0]}}}
		],
		"components": {
			"tag:medieval_furniture": {},
			"tag:m.wood_pendulum_clock": {},
			"minecraft:geometry": "geometry.m.pendulum_clock_bot",
			"minecraft:on_placed": {"event": "set_block"},
			"minecraft:queued_ticking": {"on_tick":{"event": "update"},"interval_range": [2,2],"looping": true},
			"minecraft:material_instances": {"*": {"texture": "m.warped_pendulum_clock","render_method": "alpha_test"}},
			"minecraft:collision_box": {"origin": [-8,0.0,-8],"size": [16,16,16]},
			"minecraft:selection_box": {"origin": [-8,0.0,-8],"size": [16,16,16]},
			"minecraft:loot": "loot_tables/medieval_furniture/drops/warped_clock.json",
			"minecraft:light_dampening": 0.0,
			"minecraft:destructible_by_explosion": {"explosion_resistance": 3.0},
			"minecraft:destructible_by_mining": {"seconds_to_destroy": 0.8},
			"minecraft:map_color": "#24abab"
		},
		"events": {
			"update": {
				"sequence": [
					{"condition": "!q.block_neighbor_has_any_tag(0,1,0,'m.wood_pendulum_clock_top')","run_command": {"command": ["setblock ~~~ air destroy"]}}
				]
			},
			"set_block": {
				"sequence": [
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'north'","run_command": {"command": ["setblock ~~1~ medieval:wood_pendulum_clock_top[\"minecraft:cardinal_direction\" = \"north\",\"medieval:texture\" = 9] keep","execute positioned ~~1~ unless entity @e[type=medieval:pendulum_clock,r=0.5] run summon medieval:pendulum_clock ~ ~-0.5 ~ facing ~ ~ ~-1"]}},
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'south'","run_command": {"command": ["setblock ~~1~ medieval:wood_pendulum_clock_top[\"minecraft:cardinal_direction\" = \"south\",\"medieval:texture\" = 9] keep","execute positioned ~~1~ unless entity @e[type=medieval:pendulum_clock,r=0.5] run summon medieval:pendulum_clock ~ ~-0.5 ~ facing ~ ~ ~1"]}},
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'east'","run_command": {"command": ["setblock ~~1~ medieval:wood_pendulum_clock_top[\"minecraft:cardinal_direction\" = \"east\",\"medieval:texture\" = 9] keep","execute positioned ~~1~ unless entity @e[type=medieval:pendulum_clock,r=0.5] run summon medieval:pendulum_clock ~ ~-0.5 ~ facing ~1 ~ ~"]}},
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'west'","run_command": {"command": ["setblock ~~1~ medieval:wood_pendulum_clock_top[\"minecraft:cardinal_direction\" = \"west\",\"medieval:texture\" = 9] keep","execute positioned ~~1~ unless entity @e[type=medieval:pendulum_clock,r=0.5] run summon medieval:pendulum_clock ~ ~-0.5 ~ facing ~-1 ~ ~"]}}
				]
			}
		}
	}
}