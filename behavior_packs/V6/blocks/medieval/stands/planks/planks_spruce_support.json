{
	"format_version": "1.20.30",
	"minecraft:block": {
		"description": {
			"identifier": "medieval:spruce_planks_support",
            "menu_category": {
                "category": "construction",
                "group": "itemGroup.name.supports",
                "is_hidden_in_commands": false
            },
			"states": {
				"medieval:facing_direction": [2,3,4,5],
				"medieval:side": [0,1]
			}
		},
		"permutations": [
			{"condition": "q.block_state('medieval:facing_direction') <= 3","components": {"tag:m.support_spruce_n": {}}},
			{"condition": "q.block_state('medieval:facing_direction') >= 4","components": {"tag:m.support_spruce_w": {}}},
			{"condition": "q.block_state('medieval:side') == 1","components": {"minecraft:collision_box": {"origin": [-8.0,13,-8.0],"size": [16,3,16]},"minecraft:selection_box": {"origin": [-8.0,13,-8.0],"size": [16,3,16]}}}
		],
		"components": {
			"tag:medieval_furniture": {},
			"minecraft:geometry": {
				"identifier":"geometry.m.support_0",
				"bone_visibility": {
					"shelf_n": "q.block_state('medieval:facing_direction') == 2 && q.block_state('medieval:side') == 0",
					"shelf_s": "q.block_state('medieval:facing_direction') == 3 && q.block_state('medieval:side') == 0",
					"shelf_w": "q.block_state('medieval:facing_direction') == 4 && q.block_state('medieval:side') == 0",
					"shelf_e": "q.block_state('medieval:facing_direction') == 5 && q.block_state('medieval:side') == 0"
				}
			},
			"minecraft:material_instances": {"*": {"texture": "m.spruce_planks","render_method": "opaque"}},
			"minecraft:on_player_placing": {"event": "set_facing_direction"},
			"minecraft:queued_ticking": {"on_tick":{"event": "update"},"interval_range": [0,0],"looping": true},
			"minecraft:breathability": "air",
			"minecraft:collision_box": {"origin": [-8.0,8.0,-8.0],"size": [16,8,16]},
			"minecraft:selection_box": {"origin": [-8.0,8.0,-8.0],"size": [16,8,16]},
			"minecraft:light_dampening": 0.0,
			"minecraft:destructible_by_explosion": {"explosion_resistance": 3.0},
			"minecraft:destructible_by_mining": {"seconds_to_destroy": 0.8},
			"minecraft:map_color": "#f7781e"
		},
		"events": {
			"set_facing_direction": {"set_block_state": {"medieval:facing_direction": "q.cardinal_facing_2d"}},
			"update": {
				"sequence": [
					{"condition":"(q.block_state('medieval:facing_direction') <= 3 && q.block_neighbor_has_any_tag(-1,0,0,'m.support_spruce_n') && q.block_neighbor_has_any_tag(1,0,0,'m.support_spruce_n')) || (q.block_state('medieval:facing_direction') >= 4 && q.block_neighbor_has_any_tag(0,0,-1,'m.support_spruce_w') && q.block_neighbor_has_any_tag(0,0,1,'m.support_spruce_w'))","set_block_state": {"medieval:side": 1}},
					{"condition":"(q.block_state('medieval:facing_direction') <= 3 && (!q.block_neighbor_has_any_tag(-1,0,0,'m.support_spruce_n') || !q.block_neighbor_has_any_tag(1,0,0,'m.support_spruce_n'))) || (q.block_state('medieval:facing_direction') >= 4 && (!q.block_neighbor_has_any_tag(0,0,-1,'m.support_spruce_w') || !q.block_neighbor_has_any_tag(0,0,1,'m.support_spruce_w')))","set_block_state": {"medieval:side": 0}}
				]
			}
		}
	}
}