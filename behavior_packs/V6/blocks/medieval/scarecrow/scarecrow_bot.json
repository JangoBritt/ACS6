{
	"format_version": "1.20.30",
	"minecraft:block": {
		"description": {
			"identifier": "medieval:scarecrow_bot",
			"traits": {"minecraft:placement_direction": {"enabled_states": ["minecraft:cardinal_direction"]}}
		},
		"permutations": [
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'north'","components": {"minecraft:transformation": {"rotation": [0,0,0]}}},
            {"condition": "q.block_state('minecraft:cardinal_direction') == 'south'","components": {"minecraft:transformation": {"rotation": [0,180,0]},"tag:scarecrow_south":{}}},
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'west'","components": {"minecraft:transformation": {"rotation": [0,90,0]},"tag:scarecrow_east":{}}},
            {"condition": "q.block_state('minecraft:cardinal_direction') == 'east'","components": {"minecraft:transformation": {"rotation": [0,-90,0]},"tag:scarecrow_west":{}}}
		],
		"components": {
			"minecraft:geometry": "geometry.m.scarecrow_bot",
			"minecraft:material_instances": {"*": {"texture": "m.scarecrow_bot","render_method": "alpha_test"}},
			"minecraft:queued_ticking": {"on_tick":{"event": "update"},"interval_range": [2,2],"looping": true},
			"minecraft:collision_box": true,
			"minecraft:selection_box": true,
			"minecraft:on_placed": {"event": "set_block"},
			"minecraft:loot": "loot_tables/medieval_furniture/drops/scarecrow.json",
			"minecraft:light_dampening": 0,
			"minecraft:destructible_by_explosion": {"explosion_resistance": 3},
			"minecraft:destructible_by_mining": {"seconds_to_destroy": 1.0},
			"minecraft:map_color": "#f7781e"
		},
		"events": {
			"set_block": {
				"sequence": [
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'north'", "run_command": {"command":"setblock ~~1~ medieval:scarecrow_top[\"minecraft:cardinal_direction\" = \"north\"] keep"}},
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'south'", "run_command": {"command":"setblock ~~1~ medieval:scarecrow_top[\"minecraft:cardinal_direction\" = \"south\"] keep"}},
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'east'", "run_command": {"command":"setblock ~~1~ medieval:scarecrow_top[\"minecraft:cardinal_direction\" = \"east\"] keep"}},
					{"condition": "q.block_state('minecraft:cardinal_direction') == 'west'", "run_command": {"command":"setblock ~~1~ medieval:scarecrow_top[\"minecraft:cardinal_direction\" = \"west\"] keep"}}
				]
			},
			"update": {
				"sequence": [{"condition": "!q.block_neighbor_has_any_tag(0,1,0,'m.scarecrow_top')","run_command": {"command": "setblock ~~~ air destroy"}}]
			}
		}
	}
}