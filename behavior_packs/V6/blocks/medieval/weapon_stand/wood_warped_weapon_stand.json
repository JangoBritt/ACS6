{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "medieval:wood_warped_weapon_stand",
			"properties": {
				"medieval:facing_direction": [1,2,3,4,5],
				"medieval:placed": [false,true]
			}
		},
		"permutations": [
			{"condition": "q.block_property('medieval:facing_direction') == 1","components": {"minecraft:geometry": "geometry.m.weapon_stand_item"}},
			{"condition": "q.block_property('medieval:facing_direction') == 2","components": {"minecraft:rotation": [0,0,0],"tag:weapon_stand_north": {}}},
			{"condition": "q.block_property('medieval:facing_direction') == 3","components": {"minecraft:rotation": [0,180,0],"tag:weapon_stand_south": {}}},
			{"condition": "q.block_property('medieval:facing_direction') == 4","components": {"minecraft:rotation": [0,90,0],"tag:weapon_stand_east": {}}},
			{"condition": "q.block_property('medieval:facing_direction') == 5","components": {"minecraft:rotation": [0,-90,0],"tag:weapon_stand_west": {}}}
		],
		"components": {
			"minecraft:geometry": "geometry.m.weapon_stand_left",
			"tag:weapon_stand_warped": {},
			"tag:weapon_stand": {},
			"tag:medieval_furniture": {},
			"minecraft:material_instances": {"*": {"texture": "m.wood_warped","render_method": "opaque"},"planks": {"texture": "warped_planks","render_method": "opaque"}},
			"minecraft:creative_category": {"category": "items","group": "itemGroup.name.warpedWood"},
			"minecraft:on_player_placing": {"event": "set_facing_direction"},
			"minecraft:on_placed": {"condition": "q.block_property('medieval:placed') == false","event": "place_block","target": "self"},
			"minecraft:ticking": {"on_tick":{"event": "update"},"range": [0.1,0.1],"looping": true},
			"minecraft:entity_collision": {"origin": [-8.0,0.0,-8.0],"size": [16,16,13]},
			"minecraft:pick_collision": {"origin": [-8.0,0.0,-8.0],"size": [16,16,13]},
			"minecraft:block_light_absorption": 0.0,
			"minecraft:explosion_resistance": 3.0,
			"minecraft:destroy_time": 0.8,
			"minecraft:map_color": "#148C8B"
		},
		"events": {
			"set_facing_direction": {"set_block_property": {"medieval:facing_direction": "q.cardinal_facing_2d"}},
			"update": {"sequence": [
				{"condition": "q.block_property('medieval:facing_direction') == 2 && !q.block_neighbor_has_any_tag(1,0,0,'ws_north')","run_command": {"command": "setblock ~ ~ ~ air destroy"}},
				{"condition": "q.block_property('medieval:facing_direction') == 3 && !q.block_neighbor_has_any_tag(-1,0,0,'ws_south')","run_command": {"command": "setblock ~ ~ ~ air destroy"}},
				{"condition": "q.block_property('medieval:facing_direction') == 4 && !q.block_neighbor_has_any_tag(0,0,-1,'ws_east')","run_command": {"command": "setblock ~ ~ ~ air destroy"}},
				{"condition": "q.block_property('medieval:facing_direction') == 5 && !q.block_neighbor_has_any_tag(0,0,1,'ws_west')","run_command": {"command": "setblock ~ ~ ~ air destroy"}}]},
			"place_block": {"sequence": [
				{"condition": "q.block_property('medieval:placed') == false","set_block_property": {"medieval:placed": true}},
				{"condition": "q.block_property('medieval:facing_direction') == 2","run_command": {"command": ["setblock ~1 ~ ~ medieval:wood_weapon_stand_controller keep","summon medieval:weapon_stand_ev2 ~0.5 ~-0.5 ~ facing ~0.5 ~ ~1"]}},
				{"condition": "q.block_property('medieval:facing_direction') == 3","run_command": {"command": ["setblock ~-1 ~ ~ medieval:wood_weapon_stand_controller keep","summon medieval:weapon_stand_ev2 ~-0.5 ~-0.5 ~ facing ~-0.5 ~ ~-1"]}},
				{"condition": "q.block_property('medieval:facing_direction') == 4","run_command": {"command": ["setblock ~ ~ ~-1 medieval:wood_weapon_stand_controller keep","summon medieval:weapon_stand_ev2 ~ ~-0.5 ~-0.5 facing ~1 ~ ~-0.5"]}},
				{"condition": "q.block_property('medieval:facing_direction') == 5","run_command": {"command": ["setblock ~ ~ ~1 medieval:wood_weapon_stand_controller keep","summon medieval:weapon_stand_ev2 ~ ~-0.5 ~0.5 facing ~-1 ~ ~0.5"]}}]}
		}
	}
}