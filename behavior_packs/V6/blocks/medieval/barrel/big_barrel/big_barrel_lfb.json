{
	"format_version": "1.20.30",
	"minecraft:block": {
		"description": {
			"identifier": "medieval:big_barrel_lfb",
			"states": {
				"medieval:direction": ["north","south","east","west"],
				"medieval:beer_mug": [0,1,2,3,4,5]
			}
		},
		"permutations": [
			{"condition": "q.block_state('medieval:direction') == 'north'","components": {"minecraft:transformation": { "rotation": [0,180,0] },"tag:m.barrel_lfb_north":{},"minecraft:placement_filter": {"conditions": [{"allowed_faces": ["south"],"block_filter": [{"tags": "q.any_tag('m.barrel_lbb_north')"}]}]}}},
			{"condition": "q.block_state('medieval:direction') == 'south'","components": {"minecraft:transformation": { "rotation": [0,0,0] },"tag:m.barrel_lfb_south":{},"minecraft:placement_filter": {"conditions": [{"allowed_faces": ["north"],"block_filter": [{"tags": "q.any_tag('m.barrel_lbb_south')"}]}]}}},
			{"condition": "q.block_state('medieval:direction') == 'east'","components": {"minecraft:transformation": { "rotation": [0,90,0] },"tag:m.barrel_lfb_east":{},"minecraft:placement_filter": {"conditions": [{"allowed_faces": ["west"],"block_filter": [{"tags": "q.any_tag('m.barrel_lbb_east')"}]}]}}},
			{"condition": "q.block_state('medieval:direction') == 'west'","components": {"minecraft:transformation": { "rotation": [0,270,0] },"tag:m.barrel_lfb_west":{},"minecraft:placement_filter": {"conditions": [{"allowed_faces": ["east"],"block_filter": [{"tags": "q.any_tag('m.barrel_lbb_west')"}]}]}}},
			{"condition": "q.block_state('medieval:beer_mug') > 1","components": {"minecraft:queued_ticking": {"on_tick":{"event": "update"},"interval_range": [20,20],"looping": true}}}
		],
		"components": {
			"tag:medieval_furniture": {},
			"tag:m.barrel_bot": {},
			"minecraft:geometry": {
				"identifier": "geometry.m.spout_barrel",
				"bone_visibility": {
					"spout": "q.block_state('medieval:beer_mug') > 0",
					"beer_mug": "q.block_state('medieval:beer_mug') > 1",
					"beer": "q.block_state('medieval:beer_mug') == 3",
					"beer2": "q.block_state('medieval:beer_mug') == 4",
					"beer3": "q.block_state('medieval:beer_mug') == 5"
				}
			},
			"minecraft:loot": "empty",
			"minecraft:material_instances": {"*": {"texture": "m.oak_beer_barrel","render_method": "alpha_test"},"beer_mug": {"texture": "m.beer_mug","render_method": "alpha_test"}},
			"minecraft:on_interact": {"event": "add_beer"},
			"minecraft:collision_box": {"origin": [-5.6,0.0,-6],"size": [13.6,16,14]},
			"minecraft:selection_box": {"origin": [-5.6,0.0,-6],"size": [13.6,16,14]},
			"minecraft:light_dampening": 0.0,
			"minecraft:destructible_by_explosion": {"explosion_resistance": 3.0},
			"minecraft:destructible_by_mining": {"seconds_to_destroy": 0.8},
			"minecraft:map_color": "#24abab"
		},
		"events": {
			"add_beer": {
				"sequence": [
					{"condition": "q.block_state('medieval:beer_mug') == 0 && q.is_sneaking","set_block_state": {"medieval:beer_mug": 1},"run_command": {"command": ["playsound block.itemframe.add_item @a ~~~"]}},
					{"condition": "q.block_state('medieval:beer_mug') == 1 && q.is_item_name_any('slot.weapon.mainhand',0,'medieval:beer_mug_empty_item')","set_block_state": {"medieval:beer_mug": 2},"run_command": {"command": ["playsound block.itemframe.add_item @a ~~~","playsound m.beer_pour @a ~~~"]},"decrement_stack": {}}
				]
			},
			"update": {
				"sequence": [
					{"condition": "q.block_state('medieval:beer_mug') < 5","set_block_state": {"medieval:beer_mug": "q.block_state('medieval:beer_mug') + 1"}},
					{"condition": "q.block_state('medieval:beer_mug') == 5","set_block_state": {"medieval:beer_mug": 1},"run_command": {"command": ["playsound block.itemframe.remove_item @a ~~~"]},"spawn_loot": {"table": "loot_tables/medieval_furniture/drops/beer_mug_fill.json"}}
				]
			}
		}
	}
}