{
	"format_version": "1.20.30",
	"minecraft:block": {
		"description": {
			"identifier": "medieval:beer_barrel_warped",
			"menu_category": {
                "category": "equipment",
                "group": "itemGroup.name.beer",
                "is_hidden_in_commands": false
            },
			"traits": {
				"minecraft:placement_direction": {"enabled_states": ["minecraft:cardinal_direction"]}
			},
			"states": {
				"medieval:beer_mug": {"values": {"min": 0,"max": 4}}
			}
		},
		"permutations": [
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'south'","components": {"minecraft:transformation": { "rotation": [0,0,0] }}},
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'north'","components": {"minecraft:transformation": { "rotation": [0,180,0] }}},
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'east'","components": {"minecraft:transformation": { "rotation": [0,90,0] }}},
			{"condition": "q.block_state('minecraft:cardinal_direction') == 'west'","components": {"minecraft:transformation": { "rotation": [0,270,0] }}},
			{"condition": "q.block_state('medieval:beer_mug') > 0","components": {"minecraft:queued_ticking": {"on_tick":{"event": "update"},"interval_range": [20,20],"looping": true}}}
		],
		"components": {
			"tag:medieval_furniture": {},
			"minecraft:geometry": {
				"identifier": "geometry.m.beer_barrel",
				"bone_visibility": {
					"beer_mug": "q.block_state('medieval:beer_mug') > 0",
					"beer": "q.block_state('medieval:beer_mug') == 2",
					"beer2": "q.block_state('medieval:beer_mug') == 3",
					"beer3": "q.block_state('medieval:beer_mug') == 4"
				}
			},
			"minecraft:on_interact": {"event": "add_beer"},
			"minecraft:material_instances": {"*": {"texture": "m.warped_beer_barrel","render_method": "alpha_test"},"beer_mug": {"texture": "m.beer_mug","render_method": "alpha_test"}},
			"minecraft:collision_box": {"origin": [-8,0.0,-8],"size": [16,16,16]},
			"minecraft:selection_box": {"origin": [-8,0.0,-8],"size": [16,16,16]},
			"minecraft:light_dampening": 0.0,
			"minecraft:destructible_by_explosion": {"explosion_resistance": 3.0},
			"minecraft:destructible_by_mining": {"seconds_to_destroy": 0.8},
			"minecraft:map_color": "#24abab"
		},
		"events": {
			"add_beer": {
				"sequence": [
					{"condition": "q.block_state('medieval:beer_mug') == 0 && q.is_item_name_any('slot.weapon.mainhand',0,'medieval:beer_mug_empty_item')","set_block_state": {"medieval:beer_mug": 1},"run_command": {"command": ["playsound block.itemframe.add_item @a ~~~","playsound m.beer_pour @a ~~~"]},"decrement_stack": {}}
				]
			},
			"update": {
				"sequence": [
					{"condition": "q.block_state('medieval:beer_mug') < 4","set_block_state": {"medieval:beer_mug": "q.block_state('medieval:beer_mug') + 1"}},
					{"condition": "q.block_state('medieval:beer_mug') == 4","set_block_state": {"medieval:beer_mug": 0},"run_command": {"command": ["playsound block.itemframe.remove_item @a ~~~"]},"spawn_loot": {"table": "loot_tables/medieval_furniture/drops/beer_mug_fill.json"}}
				]
			}
		}
	}
}