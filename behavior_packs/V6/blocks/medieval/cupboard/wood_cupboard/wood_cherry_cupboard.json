{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "medieval:cherry_wood_cupboard",
			"properties": {
				"medieval:facing_direction": [0,1,2,3,4,5],
				"medieval:state": [0,1,2],
				"medieval:close": [true,false]
			}
		},
		"permutations": [
			{"condition": "q.block_property('medieval:facing_direction') == 2","components": {"minecraft:rotation": [0,0,0]}},
			{"condition": "q.block_property('medieval:facing_direction') == 3","components": {"minecraft:rotation": [0,180,0]}},
			{"condition": "q.block_property('medieval:facing_direction') == 4","components": {"minecraft:rotation": [0,90,0]}},
			{"condition": "q.block_property('medieval:facing_direction') == 5","components": {"minecraft:rotation": [0,-90,0]}},
			{"condition": "q.block_property('medieval:state') == 0","components": {"minecraft:on_placed": {"event": "container","target": "self"}}},
			{"condition": "q.block_property('medieval:state') == 1 && q.block_property('medieval:close') == false","components": {"minecraft:geometry": "geometry.cupboard_open","minecraft:on_interact": {"event": "add_item"}}},
			{"condition": "q.block_property('medieval:state') == 2 && q.block_property('medieval:close') == false","components": {"minecraft:geometry": "geometry.cupboard_bowl","minecraft:on_interact": {"event": "close"}}}
		],
		"components": {
			"tag:medieval_furniture": {},
			"minecraft:geometry": "geometry.cupboard_close",
			"minecraft:material_instances": {"*": {"texture": "m.wood_cherry","render_method": "opaque"},"wood2": {"texture": "stripped_spruce","render_method": "opaque"},"line": {"texture": "light_gray_concrete","render_method": "opaque"},"planks": {"texture": "m.cherry_planks","render_method": "opaque"}},
			"minecraft:creative_category": {"category": "items","group": "itemGroup.name.cherryWood"},
			"minecraft:on_player_placing": {"event": "set_facing_direction"},
			"minecraft:on_interact": {"event": "open"},
			"minecraft:block_light_absorption": 0.0,
			"minecraft:explosion_resistance": 3.0,
			"minecraft:destroy_time": 0.8,
			"minecraft:map_color": "#fcd7f9"
		},
		"events": {
			"container": {"sequence": [{"condition": "q.block_property('medieval:state') == 0","run_command": {"command": "summon medieval:drawer_container ~ ~ ~"},"set_block_property": {"medieval:state": 1}}]},
			"add_item": {
				"sequence": [
					{"condition": "q.block_property('medieval:close') == false && q.get_equipped_item_name('main_hand') != 'bowl'","set_block_property": {"medieval:close": true},"run_command": {"command": "playsound block.barrel.close @a ~ ~ ~"}},
					{"condition": "q.block_property('medieval:state') == 1 && q.get_equipped_item_name('main_hand') == 'bowl'","set_block_property": {"medieval:state": 2},"run_command": {"command": "playsound block.itemframe.add_item @a ~ ~ ~"}}
				]
			},
			"close": {
				"sequence": [
					{"condition": "q.is_sneaking","set_block_property": {"medieval:state": 1},"run_command": {"command": "playsound block.itemframe.remove_item @a ~ ~ ~"}},
					{"condition": "!q.is_sneaking","set_block_property": {"medieval:close": true},"run_command": {"command":"playsound block.barrel.close @a ~ ~ ~"}}
				]
			},
			"open": {
				"set_block_property": {"medieval:close": false},
				"run_command": {"command":"playsound block.barrel.open @a ~ ~ ~"}
			},
			"set_facing_direction": {"set_block_property": {"medieval:facing_direction": "q.cardinal_facing_2d"}}
		}
	}
}