{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "medieval:bamboo_cabinet_tall_upper",
			"properties": {
				"medieval:facing_direction": [0,1,2,3],
				"medieval:close": [true,false]
			}
		},
		"permutations": [
			{"condition": "q.block_property('medieval:facing_direction') == 0","components": {"minecraft:rotation": [0,0,0]}},
			{"condition": "q.block_property('medieval:facing_direction') == 1","components": {"minecraft:rotation": [0,180,0]}},
			{"condition": "q.block_property('medieval:facing_direction') == 2","components": {"minecraft:rotation": [0,90,0]}},
			{"condition": "q.block_property('medieval:facing_direction') == 3","components": {"minecraft:rotation": [0,-90,0]}},
			{"condition": "q.block_property('medieval:close')","components": {"tag:cabinet_top_close":{}}},
			{"condition": "!q.block_property('medieval:close')","components": {"tag:cabinet_top_open":{}}}
		],
		"components": {
			"tag:medieval_furniture": {},
			"minecraft:geometry": "geometry.m.cabinet_tall_top",
			"minecraft:material_instances": {"planks": {"texture": "m.stripped_bamboo_block","render_method": "opaque"},"metal": {"texture": "light_gray_concrete","render_method": "opaque"},"*": {"texture": "m.bamboo_block","render_method": "opaque"}},
			"minecraft:map_color": "#fcd7f9",
			"tag:cabinet":{},
			"tag:cabinet_close": {},
			"minecraft:loot": "empty",
			"minecraft:placement_filter": {"conditions": [{"allowed_faces": ["up"],"block_filter": ["bamboo_cabinet_tall"]}]},
			"minecraft:on_placed":{"event": "rotation"},
			"minecraft:creative_category": {"category": "commands","group": "itemGroup.name.unobtainableBlocks"},
			"minecraft:on_interact": {"event": "open","target": "self"},
			"minecraft:breathability": "air",
			"minecraft:block_light_absorption": 0.0,
			"minecraft:explosion_resistance": 3.0,
			"minecraft:destroy_time": 0.8
		},
		"events": {
			"rotation": {
				"sequence": [
					{"condition": "q.block_neighbor_has_any_tag(0,-1,0,'cabinet_south')","set_block_property": {"medieval:facing_direction": 1}},
					{"condition": "q.block_neighbor_has_any_tag(0,-1,0,'cabinet_east')","set_block_property": {"medieval:facing_direction": 2}},
					{"condition": "q.block_neighbor_has_any_tag(0,-1,0,'cabinet_west')","set_block_property": {"medieval:facing_direction": 3}}
				]
			},
			"open": {
				"sequence": [
					{"condition": "q.block_property('medieval:close')","run_command":{"command":["playsound block.barrel.open @a ~ ~ ~"]},"set_block_property": {"medieval:close": false}},
					{"condition": "!q.block_property('medieval:close')","run_command":{"command":["playsound block.barrel.close @a ~ ~ ~"]},"set_block_property": {"medieval:close": true}}
				]
			}
		}
	}
}