{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "medieval:spruce_toilet",
			"properties": {
				"medieval:facing_direction": [2,3,4,5],
				"medieval:state": [0,1]
			}
		},
		"permutations": [
			{"condition": "q.block_property('medieval:facing_direction') == 2","components": {"minecraft:rotation": [0,0,0]}},
			{"condition": "q.block_property('medieval:facing_direction') == 3","components": {"minecraft:rotation": [0,180,0]}},
			{"condition": "q.block_property('medieval:facing_direction') == 4","components": {"minecraft:rotation": [0,90,0]}},
			{"condition": "q.block_property('medieval:facing_direction') == 5","components": {"minecraft:rotation": [0,-90,0]}},
			{"condition": "q.block_property('medieval:state') == 0","components": {"minecraft:geometry": "geometry.m.toilet_open"}},
			{"condition": "q.block_property('medieval:state') == 1","components": {"minecraft:geometry": "geometry.m.toilet_close"}}
		],
		"components": {
			"tag:medieval_furniture": {},
			"minecraft:geometry": "geometry.m.toilet_open",
			"minecraft:material_instances": {"planks": {"texture": "spruce_planks","render_method": "opaque"},"water": {"texture": "water","render_method": "opaque"},"*": {"texture": "stripped_spruce","render_method": "opaque"}},
			"minecraft:on_player_placing": {"event": "set_facing_direction"},
			"minecraft:creative_category": {"category": "items","group": "itemGroup.name.spruce"},
			"minecraft:on_interact": {"event": "block_event"},
			"minecraft:entity_collision": {"origin": [-8.0,0.0,-8.0],"size": [16,8,16]},
			"minecraft:pick_collision": {"origin": [-8.0,0.0,-8.0],"size": [16,8,16]},
			"minecraft:block_light_absorption": 0.0,
			"minecraft:explosion_resistance": 3.0,
			"minecraft:destroy_time": 0.8,
			"minecraft:map_color": "#9e6a1b"
		},
		"events": {
			"set_facing_direction": {"set_block_property": {"medieval:facing_direction": "q.cardinal_facing_2d"}},
			"block_event": {
				"sequence": [
					{"condition": "q.block_property('medieval:facing_direction') == 2 && q.block_property('medieval:state') == 0 && q.is_sneaking","run_command": {"command": ["execute unless entity @e[type=medieval:sit_bench,r=0.5] run summon medieval:sit_bench ~ ~-0.1 ~ facing ~ ~ ~1","execute as @e[type=medieval:sit_bench,c=1,r=0.5] at @s run ride @p[r=5,tag=!is_riding] start_riding @s teleport_rider"]}},
					{"condition": "q.block_property('medieval:facing_direction') == 3 && q.block_property('medieval:state') == 0 && q.is_sneaking","run_command": {"command": ["execute unless entity @e[type=medieval:sit_bench,r=0.5] run summon medieval:sit_bench ~ ~-0.1 ~ facing ~ ~ ~-1","execute as @e[type=medieval:sit_bench,c=1,r=0.5] at @s run ride @p[r=5,tag=!is_riding] start_riding @s teleport_rider"]}},
					{"condition": "q.block_property('medieval:facing_direction') == 4 && q.block_property('medieval:state') == 0 && q.is_sneaking","run_command": {"command": ["execute unless entity @e[type=medieval:sit_bench,r=0.5] run summon medieval:sit_bench ~ ~-0.1 ~ facing ~1 ~ ~","execute as @e[type=medieval:sit_bench,c=1,r=0.5] at @s run ride @p[r=5,tag=!is_riding] start_riding @s teleport_rider"]}},
					{"condition": "q.block_property('medieval:facing_direction') == 5 && q.block_property('medieval:state') == 0 && q.is_sneaking","run_command": {"command": ["execute unless entity @e[type=medieval:sit_bench,r=0.5] run summon medieval:sit_bench ~ ~-0.1 ~ facing ~-1 ~ ~","execute as @e[type=medieval:sit_bench,c=1,r=0.5] at @s run ride @p[r=5,tag=!is_riding] start_riding @s teleport_rider"]}},
					{"condition": "q.block_property('medieval:state') == 0 && !q.is_sneaking","run_command": {"command": "playsound block.barrel.close @a ~ ~ ~"},"set_block_property": {"medieval:state": 1}},
					{"condition": "q.block_property('medieval:state') == 1 && !q.is_sneaking","run_command": {"command": "playsound block.barrel.open @a ~ ~ ~"},"set_block_property": {"medieval:state": 0}}
				]
			}
		}
	}
}