{
  "format_version": "1.20.60",
  "minecraft:block": {
    "description": {
      "identifier": "nicothekid:copper_lamp_weathered",
      "menu_category": {
				"category": "items",
				"group": "items"
			}
    },
    "components": {
      "minecraft:display_name": "Weathered Copper Lamp",
      "minecraft:material_instances": {
        "*": {
          "texture": "nicothekid_copper_lamp_weathered",
          "render_method": "opaque",
          "ambient_occlusion": true,
					"face_dimming": true
        }
      },
      "minecraft:geometry": {
        "identifier": "geometry.block.nicothekid_unit_cube"
      },
      "minecraft:map_color": "#ff8201",
      "minecraft:breathability": "solid",
      "minecraft:collision_box": {
        "origin": [ -8, 0, -8 ],
        "size": [ 16, 16, 16 ]
      },
      "minecraft:selection_box": {
        "origin": [ -8, 0, -8 ],
        "size": [ 16, 16, 16 ]
      },
      "minecraft:light_dampening": 15,
      "minecraft:light_emission": 11,
      "minecraft:friction": 0.4,
      "minecraft:flammable": false,
      "minecraft:destructible_by_explosion": {
        "explosion_resistance": 50.0
      },
      "minecraft:destructible_by_mining": {
        "seconds_to_destroy": 0.3
      },
      "minecraft:loot": "loot_tables/lamps_lanterns/blocks/nicothekid_copper_lamp_weathered.json",
      "minecraft:on_interact": {
        "condition": "query.equipped_item_any_tag('slot.weapon.mainhand', 'minecraft:is_axe') || query.get_equipped_item_name('main_hand') == 'honeycomb'",
        "event": "nicothekid:copper_lamp_interaction",
        "target": "self"
      },
      "minecraft:random_ticking": {
				"on_tick": {
					"event": "nicothekid:copper_lamp_oxidization",
					"target": "self"
				}
			},
      "tag:copper_lamp_weathered": {},
      "tag:copper_lamp": {},
      "tag:custom_lamp": {},
      "tag:stone": {},
      "tag:metal": {}
    },
    "events": {
      "nicothekid:copper_lamp_interaction": {
				"sequence": [
					{
						"condition": "query.equipped_item_any_tag('slot.weapon.mainhand', 'minecraft:is_axe')",
						"trigger": {
							"event": "nicothekid:copper_lamp_scraping",
							"target": "self"
						}
					},
					{
						"condition": "query.get_equipped_item_name('main_hand') == 'honeycomb'",
						"trigger": {
							"event": "nicothekid:copper_lamp_waxing_on",
							"target": "self"
						}
					}
				]
			},
      "nicothekid:copper_lamp_scraping": {
        "sequence": [
          {
						"run_command": {
							"command": [
								"playsound scrape @a[r=8] ~ ~ ~ 1 1.0 1.0",
								"particle nicothekid:copper_lantern_scrape_particle ~ ~ ~"
							]
						}
					},
					{
            "damage": {
              "type": "durability",
              "target": "item",
              "amount": 1
            }
          },
          {
            "set_block": {
              "block_type": "nicothekid:copper_lamp_exposed"
            }
          }
        ]
      },
      "nicothekid:copper_lamp_waxing_on": {
        "sequence": [
          {
						"run_command": {
							"command": [
								"playsound copper.wax.on @a[r=8] ~ ~ ~ 1 1.0 1.0",
								"particle nicothekid:copper_lantern_wax_on_particle ~ ~ ~"
							]
						}
					},
					{
						"decrement_stack": {}
					},
          {
            "set_block": {
              "block_type": "nicothekid:waxed_copper_lamp_weathered"
            }
          }
        ]
      },
      "nicothekid:copper_lamp_oxidization": {
				"randomize": [
					{
						"weight": 100
					},
					{
						"weight": 5,
						"trigger": {
							"event": "nicothekid:copper_lamp_oxidized",
							"target": "self"
						}
					}
				]
			}
    }
  }
}
