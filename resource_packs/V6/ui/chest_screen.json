{
  "namespace": "chest",
  "chest_label": {
    "$new_container_title|default": "$container_title",
    "text": "$new_container_title"
  },

  "cabinet_tall_ui@cabinet_tall_ui_common": {
		"type": "image",
		"texture": "textures/ui/cabinet_inventory",
		"layer": 1
	},
	"cabinet_tall_inventory@chest.inventory_contents": {
		"$grid_template": "chest.cabinet_tall_inventory_template"
	},
	"cabinet_tall_inventory_template@common.container_item": {
		"$item_collection_name": "inventory_items"
	},
	"cabinet_tall_hotbar@chest.hotbar_contents": {
		"$grid_template": "chest.cabinet_tall_hotbar_template"
	},
	"cabinet_tall_hotbar_template@common.container_item": {
		"$item_collection_name": "hotbar_items"
	},
	"cabinet_tall_cell_image": {
		"type": "image",
		"texture": "textures/ui/empty_slot",
		"layer": 1
	},
	"cabinet_tall_grid": {
		"type": "grid",
		"size": [
			162,
			108
		],
		"anchor_from": "top_left",
		"anchor_to": "top_left",
		"grid_dimensions": [
			9,
			6
		],
		"grid_item_template": "chest.chest_grid_item",
		"collection_name": "container_items"
	},
	"cabinet_tall_top_half": {
		"type": "panel",
		"$background_images": "cabinet_tall_cell_image",
		"size": [
			"100%",
			100
		],
		"anchor_to": "top_left",
		"anchor_from": "top_left",
		"controls": [
			{
				"cabinet_tall_grid@chest.cabinet_tall_grid": {
					"offset": [
						11,
						16
					]
				}
			}
		]
	},
	"cabinet_tall_root_panel@small_root_panel": {
		"$hotbar_contents": "chest.cabinet_tall_hotbar",
		"$inventory_contents": "chest.cabinet_tall_inventory",
		"$dialog_background": "chest.cabinet_tall_ui",
		"size": [
			203,
			221
		],
		"$chest_panel": "chest.cabinet_tall_top_half"
	},

  "small_chest_grid": {
    "type": "grid",
    "size": [ 162, 54 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "grid_dimensions": [ 9, 3 ],
    "grid_item_template": "chest.chest_grid_item",
    "collection_name": "container_items"
  },
  "small_chest_panel_top_half": {
    "type": "panel",
    "size": [ "100%", "50%" ],
    "offset": [ 0, 12 ],
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "controls": [
      { "chest_label@chest.chest_label": {} },
      {
        "small_chest_grid@chest.small_chest_grid": {
          "offset": [ 7, 9 ]
        }
      }
    ]
  },
  "stove_inventory_ui@stove_inventory_ui_common": {
	"type": "image",
	"texture": "textures/ui/stove_inventory",
	"layer": 1
},
"stove_inventory_inventory@chest.inventory_contents": {
	"$grid_template": "chest.stove_inventory_inventory_template"
},
"stove_inventory_inventory_template@common.container_item": {
	"$item_collection_name": "inventory_items"
},
"stove_inventory_hotbar@chest.hotbar_contents": {
	"$grid_template": "chest.stove_inventory_hotbar_template"
},
"stove_inventory_hotbar_template@common.container_item": {
	"$item_collection_name": "hotbar_items"
},
"stove_inventory_cell_image": {
	"type": "image",
	"texture": "textures/ui/empty_slot",
	"layer": 1
},
"stove_inventory_grid": {
	"type": "grid",
	"size": [
		52,
		150
	],
	"anchor_from": "top_left",
	"anchor_to": "top_left",
	"grid_dimensions": [
		1,
		6
	],
	"maximum_grid_items": 6,
	"grid_item_template": "chest.chest_grid_item",
	"collection_name": "container_items"
},
"stove_inventory_top_half": {
	"type": "panel",
	"$background_images": "stove_inventory_cell_image",
	"size": [
		"100%",
		100
	],
	"anchor_to": "top_left",
	"anchor_from": "top_left",
	"controls": [
		{ "chest_label@chest.chest_label": {} },
		{
			"stove_inventory_grid@chest.stove_inventory_grid": {
				"offset": [
					65,
					30
				]
			}
		}
	]
},
"stove_inventory_root_panel@small_root_panel": {
	"$hotbar_contents": "chest.stove_inventory_hotbar",
	"$inventory_contents": "chest.stove_inventory_inventory",
	"$dialog_background": "chest.stove_inventory_ui",
	"size": [
		203,
		220
	],
	"$chest_panel": "chest.stove_inventory_top_half"
},
  "small_root_panel@common.root_panel": {
    "$chest_panel|default": "chest.small_chest_panel_top_half",	
	"$bg_bag|default": "$bg_bag",
    "layer": 1,
    "controls": [
      { 
		  "common_panel@common.common_panel": {
		  } 
	  },
      {
        "chest_panel": {
          "type": "panel",
          "layer": 5,
          "controls": [
            { "small_chest_panel_top_half@$chest_panel": {} },
            { "inventory_panel_bottom_half_with_label@common.inventory_panel_bottom_half_with_label": {} },
            { "hotbar_grid@common.hotbar_grid_template": {} },
            { "inventory_take_progress_icon_button@common.inventory_take_progress_icon_button": {} }
          ]
        }
      },
      { "inventory_selected_icon_button@common.inventory_selected_icon_button": {} },
      { "gamepad_cursor@common.gamepad_cursor_button": {} }
    ]
  },
  "small_chest_panel": {
    "type": "panel",
    "controls": [
      { "container_gamepad_helpers@common.container_gamepad_helpers": {} },
      {
        "flying_item_renderer@common.flying_item_renderer": {
          "layer": 11
        }
      },
      {
        "selected_item_details_factory@common.selected_item_details_factory": {
          "control_name": "@chest.selected_item_details"
        }
      },
      {
        "item_lock_notification_factory@common.item_lock_notification_factory": {
          "control_name": "@common.item_lock_notification"
        }
      },
      {
        "root_panel@$root_panel": { }
      }
    ]
  },
  "ender_chest_panel@chest.small_chest_panel": {
  },
  
  "small_chest_screen@common.inventory_screen_common": {
    "$close_on_player_hurt|default": true,
    "close_on_player_hurt": "$close_on_player_hurt",
    "$root_panel|default": "chest.small_root_panel",
	"$bg_bag|default": "common.dialog_background_opaque",
    "$new_container_title|default": "$container_title",
    "$container_size|default": 27,
	"modifications":[
		{
			"array_name": "variables",
			"operation": "insert_back",
			"value": {
				"requires": "($new_container_title = 'Stove')",
				"$use_custom_pocket_toast": false,
				"$root_panel": "chest.stove_inventory_root_panel",
				"$screen_content": "chest.stove_inventory_root_panel",
				"$new_container_title": " ",
				"$container_size": 54,
				"$container_color": "small"
			}
		},
    {
      "array_name": "variables",
			"operation": "insert_back",
			"value": {
				"requires": "($new_container_title = 'cabinet_tall')",
				"$use_custom_pocket_toast": false,
				"$root_panel": "chest.cabinet_tall_root_panel",
				"$screen_content": "chest.cabinet_tall_root_panel",
				"$new_container_title": " ",
				"$container_size": 54,
				"$container_color": "small"
			}
    }
	]	
  },
  "ender_chest_screen@common.inventory_screen_common": {
    "$close_on_player_hurt|default": true,
    "close_on_player_hurt": "$close_on_player_hurt",
	"$bg_bag|default": "common.dialog_background_opaque",
    "variables": [
      {
        "requires": "$desktop_screen",
        "$screen_content": "chest.small_root_panel",
        "$screen_bg_content": "common.screen_background"
      },
      {
        "requires": "$pocket_screen",
        "$screen_content": "pocket_containers.ender_chest_panel"
      }
    ]
  }
}