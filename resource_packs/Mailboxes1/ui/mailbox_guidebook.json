					"size": [150,190],
					"offset": [0,0],
					"anchor_from": "top_right",
					"anchor_to": "top_right",
					"controls": [
						{
							"paper-2-1": {
								"type": "label",
								"size": ["100%","100%"],
								"text": "guidebook.page_2_0",
								"color": [0.56, 0.33, 0.23]
							}
						},
						{
							"paper-2-2": {
								"type": "image",
								"size": [150,100],
								"offset": [0,100],
								"anchor_from": "top_middle",
								"anchor_to": "top_middle",
								"texture": "textures/ui/mailbox/guide/guidebook_page-1"
							}
						}
					]
				}
			}
		],
		"bindings": [
			{
				"binding_name": "#title_text"
			},
			{
				"binding_type": "view",
				"source_property_name": "(not ((#title_text - $page_name) = #title_text))",
				"target_property_name": "#visible"
			}
		]
