{
	"namespace": "mailbox_guidebook",
	"inventory_button@common.button": {
		"$pressed_button_name": "button.form_button_click",
		"hover_control": "hover",
		"controls": [
			{
				"hover@mailbox_guidebook.hover_control": {}
			}
		],
		"bindings": [
			{
				"binding_name": "#null",
				"binding_type": "collection",
				"binding_condition": "none",
				"binding_collection_name": "form_buttons"
			},
			{
				"binding_name": "#null",
				"binding_type": "collection_details",
				"binding_collection_name": "form_buttons"
			},
			{
				"binding_name": "#form_button_text",
				"binding_type": "collection",
				"binding_collection_name": "form_buttons"
			},
			{
				"binding_name": "#null",
				"binding_type": "view",
				"source_property_name": "(not (#form_button_text = ''))",
				"target_property_name": "#visible"
			}
		]
	},
	"hover_control": {
		"type": "panel",
		"size": ["100%c","100%c"],
		"controls": [
			{
				"hovering_image": {
					"type": "panel",
					"size": [28,18],
					"controls": [
						{
							"highlight_slot": {
								"type": "image",
								"texture": "textures/ui/mailbox/guide/slot",
								"layer": 10
							}
						}
					]
				}
			}
		]
	},
	"inventory_item": {
		"type": "stack_panel",
		"size": [28,18],
		"layer": 2,
		"controls": [
			{
				"inventory_button@mailbox_guidebook.inventory_button": {}
			}
		]
	},
	"page-1-2": {
		"type": "panel",
		"$page_name": "Mailbox Guidebook 1 - 2",
		"controls": [
			{
				"page_left": {
					"type": "panel",
					"size": [150,190],
					"offset": [0,0],
					"anchor_from": "top_left",
					"anchor_to": "top_left",
					"controls": [
						{
							"paper-1": {
								"type": "image",
								"size": [150,50],
								"anchor_from": "center",
								"anchor_to": "center",
								"texture": "textures/ui/mailbox/guide/guidebook_title"
							}
